<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/javaee"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
	id="WebApp_ID" version="3.1">
	
	
	<servlet>
		<servlet-name>register</servlet-name>
		<servlet-class>com.student.registration.controller.RegisterServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>register</servlet-name>
		<url-pattern>/register</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>studentDetails</servlet-name>
		<servlet-class>com.student.registration.controller.DetailsServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>studentDetails</servlet-name>
		<url-pattern>/studentDetails</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>success</servlet-name>
		<servlet-class>com.student.registration.controller.SuccessServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>success</servlet-name>
		<url-pattern>/success</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.student.registration.controller.LoginServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/login.jsp</url-pattern>
	</servlet-mapping>
	<servlet>
		<servlet-name>welcome</servlet-name>
		<servlet-class>com.student.registration.controller.WelcomeServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>welcome</servlet-name>
		<url-pattern>/welcome</url-pattern>
	</servlet-mapping>
</web-app>